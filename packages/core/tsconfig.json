{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": ["es2017", "dom"],
    "target": "es6"
  },
  "include": ["index.ts", "src"],
  "exclude": ["node_modules", "test"]
}
